<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1>All authors</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item"><a href="/">Home</a></li>
              <li class="breadcrumb-item active">DataTables</li>
            </ol>
          </div>
        </div>
      </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-12">

            <div class="card">
              <div class="card-header">
                <h3 class="card-title">DataTable with default features</h3>
              </div>
              <!-- /.card-header -->
              <div class="card-body">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th>#</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th> Country</th>
                    <th>Options</th>
                  </tr>
                  </thead>
                       <tbody>
                           <% authors.forEach(author=> {   %>  
                            <tr>
                              <th></th> 
                              <td><%= author.firstName  %></td>
                              <td><%= author.lastName  %></td>
                              <td><%= author.country  %></td>
                              <td>
                                  <div class="row text-center">
                                    <div class="col-4 "> <a href="/authors/<%= author._id %>"" class="fas fa-eye" title="View"></a> </div>
                                    <div class="col-4 "><a href="/authors/edit/<%= author._id %>" class="fas fa-edit" title="Edit"></a></div>
                                    <div class="col-4"><a href="/authors/delete/<%= author._id %>" class="fas fa-trash-alt" title="Delete"></a></div>
                                  </div>
                              </td>
                            </tr>
                            
                          
                          <% })   %>
                       </tbody>
                  <tfoot>
                  <tr>
                    <th>#</th>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th> Country</th>
                    <th>Options</th>
                  </tr>
                  </tfoot>
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
          </div>
          <!-- /.col -->
        </div>
        <!-- /.row -->
      </div>
      <!-- /.container-fluid -->
    </section>
    <!-- /.content -->
  </div>